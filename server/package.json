{
  "name": "shoperia-server",
  "version": "1.0.0",
  "description": "Happy Shoping",
  "author": "Sulthon Abdul Malik <sulthon.abdmalik@gmail.com>",
  "license": "MIT",
  "main": "build/bin/www",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc -b",
    "start": "node .",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --rs --respawn --transpile-only src/bin/www",
    "start:debug": "cross-env DEBUG=shoperia:* npm run start:dev",
    "start:debug-express": "cross-env DEBUG=express:*,shoperia:* npm run start:dev",
    "prod": "cross-env NODE_ENV=production DEBUG=shoperia:* env-cmd npm start",
    "prodemon": "cross-env NODE_ENV=production DEBUG=express:*,shoperia:* env-cmd nodemon .",
    "seed": "node seeder",
    "prettify": "npm run prettify:server --prefix .."
  },
  "dependencies": {
    "aws-sdk": "^2.894.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.1",
    "ejs": "^3.1.6",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^6.10.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-s3": "~2.9.1",
    "nanoid": "^3.1.22",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "sharp": "~0.28.1",
    "stripe": "^8.161.0",
    "uuid": "^8.3.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "~1.4.2",
    "@types/multer-s3": "~2.7.12",
    "@types/node": "^20.2.5",
    "@types/passport": "0.4.1",
    "@types/passport-jwt": "^3.0.8",
    "@types/sharp": "~0.28.1",
    "@types/uuid": "~8.3.2",
    "@types/validator": "~13.6.0",
    "agent-base": "^6.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.7",
    "rimraf": "^5.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
